#include <stdio.h>

int main() {
    int a[5] = {40, 80, 30, 20, 5};   // Initialize the array with 5 elements
    int i, j, temp;
    int n = sizeof(a) / sizeof(a[0]); // Find total number of elements in the array

    // Display array before sorting
    printf("Before sorting: ");
    for(i = 0; i < n; i++)
        printf("%d ", a[i]);
    printf("\n");

    // Sorting logic (ascending order)
    for(i = 0; i < n - 1; i++)        // Outer loop for passes
    {
        for(j = i + 1; j < n; j++)    // Inner loop to compare elements
        {
            if(a[i] > a[j])           // If current element is greater than next one
            {
                temp = a[i];          // Swap them
                a[i] = a[j];
                a[j] = temp;
            }
        }
    }

    // Display array after sorting
    printf("After sorting: ");
    for(i = 0; i < n; i++)
        printf("%d ", a[i]);
    printf("\n");

    return 0;
}
