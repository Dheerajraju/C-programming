#include<stdio.h>
int main(int argc, char *argv[])
{
        if(argc != 2) //no.of arguments should be 2
        {
        printf("usage: .a/.out filename\n");
        }

        FILE *fp = fopen("data.txt","r"); //opening the txt file in read mode
        if(fp == NULL) //checking the file is empty or not
        {
                printf("the file is empty\n");
        }
        else
        {
                printf("the file exixts\n");
        }
}
           
